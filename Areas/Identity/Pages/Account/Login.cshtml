@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        .bodyLogin {
            background: linear-gradient(to right, #4facfe, #00f2fe);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .card {
            border: none;
            border-radius: 10px;
        }
        .form-floating label {
            color: #6c757d;
        }
        .btn-primary {
            background-color: #4facfe;
            border-color: #4facfe;
        }
        .btn-primary:hover {
            background-color: #00f2fe;
            border-color: #00f2fe;
        }
        .text-center a {
            color: #00f2fe;
        }
    </style>
</head>
<body class="bodyLogin">
    <div class="container">
        <h1 class="display-6 fw-bold text-center text-white">@ViewData["Title"]</h1>
        <div class="row justify-content-center mt-3">
            <div class="col-lg-5">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <form id="formulario" method="post">
                            <h3 class="text-center mb-4">Ingrese sus datos</h3>
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" aria-required="true" />
                                <label asp-for="Input.Email">Correo electrónico</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Contraseña" aria-required="true" id="password" />
                                <label asp-for="Input.Password">Contraseña</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" onclick="mostrar()" id="mostrarPassword">
                                <label class="form-check-label" for="mostrarPassword">Mostrar contraseña</label>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">Iniciar Sesión</button>
                            </div>
                            <div class="text-center mt-3">
                                <p>
                                    <a asp-page="./ForgotPassword" class="text-decoration-none">¿Olvidó su contraseña?</a>
                                </p>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Registrarse como un nuevo usuario</a>
                                </p>
                                <p>
                                    <a asp-page="./ResendEmailConfirmation" class="text-decoration-none">Reenviar correo de confirmación</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

    <script type="text/javascript">
        function mostrar(){
            var tipo = document.getElementById("password");
            if(tipo.type == 'password'){
                tipo.type = 'text';
            }else{
                tipo.type = 'password';
            }
        }
    </script>
</body>
</html>
